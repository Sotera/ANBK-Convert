<Window x:Name="MainWindowName"
				x:Class="JistBridge.UI.MainWindow.MainWindow"
				xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				xmlns:behaviors="clr-namespace:JistBridge.Behaviors"
				xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
				Background="#FF333333"
				ResizeMode="CanResizeWithGrip"
				WindowStartupLocation="CenterScreen"
				Title="{Binding Title}">
    <Grid x:Name="LayoutRoot">
        <DockPanel>
            <RichTextBox 
				Foreground="CornflowerBlue" Cursor="Hand" IsReadOnly="True">
                <i:Interaction.Behaviors>
                    <behaviors:WordBehavior></behaviors:WordBehavior>
                </i:Interaction.Behaviors>
                <FlowDocument>
                    <Paragraph>
                        <Run Text="{Binding RichTextBox.ReportContents}" Cursor="Hand" />
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
        </DockPanel>
    </Grid>
</Window>
